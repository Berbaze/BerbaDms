@using DmsProjeckt.Data
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<style>
    /* ============================= */
    /* 🎨 Labels Modern              */
    /* ============================= */
    .form-label, label, .col-md-3 > label, .col-md-6 > label {
        color: #58d0ff !important;
        font-weight: 900 !important;
        font-family: 'Montserrat', Arial, sans-serif !important;
        font-size: 1.07rem !important;
        letter-spacing: .02em;
        margin-bottom: 0.35rem;
        text-shadow: 0 1px 5px #0e223922;
        text-transform: uppercase;
    }

    /* ============================= */
    /* 📤 Upload Box Modern          */
    /* ============================= */
    .upload-box {
        background: #191926;
        padding: 28px;
        border-radius: 16px;
        border: 1px solid #2e2e3e;
        color: #f8f8f8;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.4);
        margin-bottom: 2rem;
    }

    .upload-title {
        color: #58d0ff;
        font-weight: 700;
        font-size: 1.25rem;
        margin-bottom: 18px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .drop-zone {
        border: 2px dashed #58d0ff;
        border-radius: 12px;
        padding: 35px;
        text-align: center;
        background: #14141e;
        cursor: pointer;
        transition: background 0.25s, border-color 0.25s;
    }

        .drop-zone:hover {
            background: #1a1a26;
            border-color: #80e4ff;
        }

    .upload-icon {
        font-size: 3rem;
        color: #58d0ff;
    }

    .upload-text {
        margin-top: 10px;
        font-size: 1.05rem;
    }

        .upload-text .highlight {
            color: #ffc700;
            font-weight: 600;
        }

    /* Liste fichiers */
    .file-list {
        border-top: 1px solid #2b2b3b;
        margin-top: 20px;
        padding-top: 15px;
    }

        .file-list div {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 6px 0;
            border-bottom: 1px solid #2b2b3b;
            font-size: 0.95rem;
        }

            .file-list div:last-child {
                border-bottom: none;
            }

        .file-list .file-name {
            color: #f0f0f0;
        }

        .file-list .file-size {
            font-size: 0.85rem;
            color: #999;
        }

    /* ============================= */
    /* 🧠 Buttons Modern             */
    /* ============================= */
    .btn-analyze {
        background: #007bff;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        color: #fff;
        font-weight: 600;
        font-size: 1.05rem;
        transition: background 0.25s, transform 0.2s;
        box-shadow: 0 4px 18px #58d0ff44;
    }

        .btn-analyze:hover {
            background: #339dff;
            transform: translateY(-2px) scale(1.04);
            box-shadow: 0 8px 28px #58d0ff66;
        }

    .btn-upload {
        background: #ffc700;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        color: #0d0d0d;
        font-weight: 600;
        font-size: 1.05rem;
        transition: background 0.25s, transform 0.2s;
        box-shadow: 0 4px 18px #ffc70055;
    }

        .btn-upload:hover {
            background: #ffd633;
            transform: translateY(-2px) scale(1.04);
            box-shadow: 0 8px 28px #ffc70077;
        }

    /* ============================= */
    /* 📊 Progressbar                */
    /* ============================= */
    .modern-progress {
        height: 8px;
        background: linear-gradient(90deg, #58d0ff, #44d1ff);
        border-radius: 10px;
        margin-top: 1rem;
        box-shadow: 0 2px 10px #44d1ff55;
        animation: modernBar 2s linear infinite;
    }

    @@keyframes modernBar {
        0%

    {
        width: 0;
    }

    50% {
        width: 80%;
    }

    100% {
        width: 100%;
    }

    }

    /* ============================= */
    /* 🔽 Select Modern              */
    /* ============================= */
    select.form-select {
        background: #181818;
        color: #58d0ff;
        font-weight: 700;
        border-radius: 0.6em;
        border: 1.5px solid #334477;
        padding: 0.6em 1em;
        min-width: 220px;
        transition: border 0.3s;
    }

        select.form-select:focus {
            border: 2px solid #58d0ff;
            outline: none;
        }
</style>


<form method="post" enctype="multipart/form-data" id="uploadForm" class="upload-box">
    <h5 class="upload-title">
        <i class="bi bi-cloud-arrow-up"></i> Dateien hochladen
    </h5>

    <!-- Zone Drop -->
    <div id="drop-area" class="drop-zone">
        <i class="bi bi-folder2-open upload-icon"></i>
        <p class="upload-text">Ziehe Dateien hierher oder <span class="highlight">klicke</span></p>
        <input asp-for="Dateien" type="file" multiple
               class="form-control d-none" id="fileElem"
               accept=".pdf,.txt,.doc,.docx,.xls,.xlsx,.ppt,.pptx,.jpg,.jpeg,.png,.gif" />
    </div>

    <!-- Liste Fichiers -->
    <div id="file-list" class="file-list mt-3"></div>

    <!-- Boutons -->
    <div class="d-flex justify-content-center gap-3 mt-4">
        <button asp-page-handler="Analyze"
                id="analyzeBtn"
                class="btn btn-analyze">
            🧠 Analysieren
        </button>
    </div>
</form>




<!-- HIER unter dem Formular: -->
@if (Model.Dokumente?.Any() == true)
{
    <div class="mt-5">
        @foreach (var doc in Model.Dokumente)
        {
            <div class="mb-3 p-2 rounded" style="background:#232526;">
                <div class="d-flex align-items-center justify-content-between">
                    <span>
                        <i class="bi bi-file-earmark" style="color:#58d0ff;font-size:1.45em;"></i>
                        <span style="font-family:monospace;color:#fff;font-size:1.08em;">
                            @doc.FileName
                            @if (doc.Metadata?.IsGrossDoc ?? false)
                            {
                                <span class="badge bg-info ms-2">Große Datei</span>
                            }
                        </span>
                    </span>

                    <span class="badge @(doc.Status == DokumentStatus.Analyzed ? "bg-success" : "bg-warning") text-dark" style="font-size:1em;">
                        @if (doc.Status == DokumentStatus.Analyzed)
                        {
                            <span><i class="bi bi-check-circle-fill" style="color:#198754;"></i> Fertig</span>
                        }
                        else
                        {
                            <span><i class="bi bi-hourglass-split" style="color:#58d0ff;"></i> Wird analysiert…</span>
                        }
                </span>
            </div>

            <div class="progress mt-2" style="height:7px;">
                <div class="progress-bar @(doc.Metadata?.IsGrossDoc ?? false ? "bg-primary" : "")"
                     role="progressbar"
                     style="width:@(doc.Progress ?? 100)%; background:@((doc.Metadata?.IsGrossDoc ?? false)
                                                                       ? "linear-gradient(90deg,#007bff,#00c6ff)"
                                                                       : "linear-gradient(90deg,#ffc700,#44d1ff)");">
            </div>
        </div>
    </div>
        }
    </div>
}



