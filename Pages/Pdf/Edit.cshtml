@page
@model DmsProjeckt.Pages.Pdf.EditModel
@{
    ViewData["Title"] = "Liste des fichiers à signer";
}
<style>
    body {
        background-color: #1e1e1e;
        color: white;
    }

    h2 {
        color: #ffcc00;
    }

    table {
        color: white;
        border-color: #444;
    }

    th {
        color: #4eaaff;
        border-bottom: 2px solid #555;
    }

    td {
        color: white;
        border-top: 1px solid #444;
    }

    a.btn-primary {
        background-color: #007bff;
        border-color: #0056b3;
        color: white;
    }

        a.btn-primary:hover {
            background-color: #0056b3;
            border-color: #003f7f;
        }
</style>

<h2>📂 Sélectionner un PDF à modifier</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nom</th>
            <th>Source</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model.Files)
        {
            <tr>
                <td>@file.Name</td>
                <td>@file.Source</td>
                <td>
                    <a asp-page="/Pdf/EditOne"
                       asp-route-FileName="@Uri.EscapeDataString(file.Path)"
                       asp-route-Source="@file.Source"
                       class="btn btn-sm btn-outline-primary">🔥 Modifier</a>


                </td>
            </tr>
        }
    </tbody>
</table>